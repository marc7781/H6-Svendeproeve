<div class="foreground">
    <div class="top-container">
        <h4>@Reason</h4>
    </div>
    <div class="bottom-container">
        <div class="stars">
            @for (int i = 0; i < 5; i++)
            {
                if(i < Rating)
                {
                    <img src="images/FilledStar.png"/>
                }
                else
                {
                    <img src="images/EmptyStar.png" />
                }
            }
        </div>
        <p>Fra @SenderName</p>
    </div>
</div>