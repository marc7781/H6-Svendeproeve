<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Resources.Styles.FindOrderPopUpStyle">
    <Style TargetType="Border" x:Key="Background">
        <Setter Property="BackgroundColor" Value="White"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 15,15,15,15"/>
    </Style>
    <Style TargetType="Label" x:Key="Headline">
        <Setter Property="TextColor" Value="Black"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="Padding" Value="0,25,0,25"/>
        <Setter Property="HorizontalTextAlignment" Value="Start"/>
    </Style>
    <Style TargetType="Label" x:Key="SubHeadline">
        <Setter Property="TextColor" Value="Red"/>
        <Setter Property="HorizontalTextAlignment" Value="Start"/>
    </Style>
    <Style TargetType="Button" x:Key="Buttons">
        <Setter Property="CornerRadius" Value="25"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="0,5,0,5"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="1,0">
                    <GradientStop Color="#C32424" Offset="0.1"/>
                    <GradientStop Color="#2E0148" Offset="1.0"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>